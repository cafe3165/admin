                >
            </TextView>

            <TextView
                android:id="@+id/widget32"

                android:text="XXXX"
                android:layout_marginLeft="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/biao_z"
