        android:layout_width="316dp"
        android:layout_height="165dp"
        android:background="@drawable/xiantiaokuang"
        android:weightSum="1">
        <View
            android:layout_width="fill_parent"

            android:layout_height="40dp"

            android:layout_weight="0.62" />
        <TableRow
